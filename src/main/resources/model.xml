<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd" >

    <bean id="accountDao" class="com.study.lab1.dao.AccountDao">
        <property name="dataSource" ref="mockDataSource"/>
    </bean>

    <bean id="userDao" class="com.study.lab1.dao.UserDao">
        <property name="dataSource" ref="mockDataSource"/>
    </bean>

    <bean id="mockDataSource" class="com.study.lab1.dao.MockDataSource">
    </bean>

</beans>