<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd" >

    <bean id="accountDao" class="com.study.lab1.dao.AccountDao">
        <property name="dataSource" ref="mockDataSource"/>
    </bean>

    <bean id="userDao" class="com.study.lab1.dao.UserDao">
        <property name="dataSource" ref="mockDataSource"/>
    </bean>

    <bean id="mockDataSource" class="com.study.lab1.dao.MockDataSource">
        <property name="accounts">
            <list>
                <bean class="com.study.lab1.model.Account">
                    <constructor-arg value="1"/>
                    <constructor-arg value="200000"/>
                </bean>
                <bean class="com.study.lab1.model.Account">
                    <constructor-arg value="2"/>
                    <constructor-arg value="200000"/>
                </bean>
                <bean class="com.study.lab1.model.Account">
                    <constructor-arg value="3"/>
                    <constructor-arg value="200000"/>
                </bean>
                <bean class="com.study.lab1.model.Account">
                    <constructor-arg value="4"/>
                    <constructor-arg value="200000"/>
                </bean>
                <bean class="com.study.lab1.model.Account">
                    <constructor-arg value="5"/>
                    <constructor-arg value="200000"/>
                </bean>
            </list>
        </property>
        <property name="users">
            <list>
                <bean class="com.study.lab1.model.User">
                    <constructor-arg value="1"/>
                </bean>
                <bean class="com.study.lab1.model.User">
                    <constructor-arg value="2"/>
                </bean>
                <bean class="com.study.lab1.model.User">
                    <constructor-arg value="3"/>
                </bean>
                <bean class="com.study.lab1.model.User">
                    <constructor-arg value="4"/>
                </bean>
                <bean class="com.study.lab1.model.User">
                    <constructor-arg value="5"/>
                </bean>
            </list>
        </property>
    </bean>
    
    <bean id="request" class="com.study.lab1.model.Request">
    </bean>
</beans>